- const title = "Moonrise, Moonset, Moon Phase"
- const description = "Geolocation-based moon phase, moonrise, and moonset"
- const shortTitle = "Moon"
- const moonColor = '#fff'
- const sunColor = '#f8c537'
- const currentYear = new Date().getFullYear().toString().substr(-2)

doctype html
html(lang="en-GB")
  head
    title= title
    meta(charset="utf-8")
    meta(name="description" content=description)    
    meta(name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover")
    meta(name="theme-color" content="#000")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-title" content=shortTitle)
    link(rel="preload" href="https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2" as="font" type="font/woff2" crossorigin="crossorigin")
    link(rel="apple-touch-icon" href="/apple-touch-icon.png")
    link(rel="manifest" href="/pwa/manifest.json")
  body(no-touch no-js)
    div.progress-bar
    moon-app.app
      header.header
        h1.header__title
          a.header__link(href="/" title="Today")= shortTitle
        user-location.location(default="New York, NY")
      main.content
        noscript Please <a href="https://www.enable-javascript.com/" title="How to enable JavaScript in your browser">enable JavaScript</a> to view this app.
        div.charts
          div.charts__frame
            chart-axes.chart
            donut-chart.chart.chart--sun(name="sun" color=sunColor)
            donut-chart.chart.chart--moon(name="moon" color=moonColor)
            moon-photo.photo
        moon-info.info
        prev-next.nav.nav--prev(direction="prev")
        prev-next.nav.nav--next(direction="next")
        app-today(selector=".header__title,.info__phase,.info__percent")
      footer.footer
        p.footer__blurb.footer__blurb--copyright
          span.footer__years © 2020
          a.footer__link(
            href="https://gauslin.com",
            title="Visit Ben Gauslin’s Website",
            target="_blank",
            rel="noopener",
          ) Ben Gauslin
        p.footer__blurb.footer__blurb--repo
          a.footer__link(
            href="https://github.com/bgauslin/moon",
            title="View source code on GitHub",
            target="_blank",
            rel="noopener",
          ) GitHub
