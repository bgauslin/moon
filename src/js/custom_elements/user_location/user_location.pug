mixin icon(name)
  svg(
    viewBox="0 0 24 24"
    aria-hidden="true"
  )
    path(d=svgPath.get(name))

//-  Rendered template.
form
  input(
    type="text"
    name="location"
    value=location
    aria-label="Enter a new location"
    required
  )
  button(
    type="submit"
    aria-label="Update location"
  )
    +icon('submit')
  button(
    type="reset"
    aria-label="Clear location"
  )
    +icon('reset')
button(
  id="find"
  aria-label="Find my location"
  hidden
)
  +icon('location')