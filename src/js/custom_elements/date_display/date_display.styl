moon-date {
  animation: slideInUp var(--transition-intro) ease;
  display: block;
  grid-area: date;
  place-self: center;

  a {
    padding: rem(8) rem(16);
    transition: transform var(--transition);
    white-space: nowrap;

    &:link,
    &:visited {
      color: white;
    }

    &:active,
    &:focus {
      color: rgba(white, .7);
    }

    &:active {
      transform: scale(.8);
    }

    [no-touch] &:hover {
      color: rgba(white, .7);
    }
  }

  [no-touch] & a {
    transition: color var(--transition), transform var(--transition);
  }

  .today {
    font-variation-settings: 'wght' 600;
    pointer-events: none;
  }
}