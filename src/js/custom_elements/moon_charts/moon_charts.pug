-
  const moonColor = '#fff';
  const sunColor = '#f8c537';

//- Mixins.
mixin line(coordinates)
  line(
    x1=coordinates.x1
    y1=coordinates.y1
    x2=coordinates.x2
    y2=coordinates.y2
  )

mixin chartAxes(groups, viewbox)
  svg(
    viewbox=`0 0 ${viewbox} ${viewbox}`
    aria-hidden="true"
  )
    each group in groups
      g(id=group.id)
        each line in group.lines
          +line(line)

//- Rendered template.
donut-chart(name="sun" color=sunColor)
donut-chart(name="moon" color=moonColor)
+chartAxes(groups, viewbox)
moon-photo.photo
