moon-charts {
  animation: scaleIn var(--transition-intro) ease;
  display: block;
  grid-area: charts;
  margin: auto;
  max-width: 30rem; // TODO: var()
  padding: 0 0 100%;
  position: relative;
  width: 100%;

  svg {
    height: 100%;
    position: absolute;
    width: 100%;
  }

  [id='sweep-ticks'] line {
    stroke: black;
  }

  [id='minor-ticks'] line {
    stroke: rgba(white, .35);
  }

  [id='major-ticks'] line {
    stroke: rgba(white, .7);
  }

  [no-js] & {
    display: none;
  }
}