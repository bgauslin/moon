.nav
  align-self center
  justify-self center

.nav--prev
  animation slideInLeft transition-intro ease
  grid-area prev

.nav--next
  animation slideInRight transition-intro ease
  grid-area next
  text-align right

.nav__link
  align-items center
  display flex
  height controls-size
  justify-content center
  width controls-size

// SVG icons.
.nav__icon
  flex 0 0 rem(32)
  height auto
  transition transform transition

.nav__link:active .nav__icon
  transform scale(.8)

.nav__icon__path
  fill none
  stroke-width 4
  transition stroke transition

.nav__link:link .nav__icon__path
.nav__link:visited .nav__icon__path
  stroke white

.nav__link:active .nav__icon__path
[no-touch] .nav__link:hover .nav__icon__path
  stroke rgba(white, .7)
