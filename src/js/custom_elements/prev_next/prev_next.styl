prev-next
  align-self center
  justify-self center

  &[direction=prev]
    animation slideInLeft transition-intro ease
    grid-area prev

  &[direction=next]
    animation slideInRight transition-intro ease
    grid-area next
    text-align right

  a
    align-items center
    background var(--background-1)
    border-radius 50%
    display flex
    height controls-size
    justify-content center
    transition background transition, transform transition
    width controls-size

    &:focus
    [no-touch] &:hover
      background var(--background-2)

    &:active
      transform scale(.8)

    path
      fill none
      stroke white
      stroke-width 1

  svg
    flex 0 0 rem(32)
    height auto
    transition transform transition

  [no-js] &
    display none
