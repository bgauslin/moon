prev-next {
  align-self: center;
  justify-self: center;

  &[direction='prev'] {
    animation: slideInLeft TRANSITION_INTRO ease;
    grid-area: prev;
  }

  &[direction='next'] {
    animation: slideInRight TRANSITION_INTRO ease;
    grid-area: next;
    text-align: end;
  }

  a {
    align-items: center;
    background: var(--background-1);
    border-radius: 50%;
    display: flex;
    height: CONTROLS_SIZE;
    justify-content: center;
    transition: background TRANSITION, transform TRANSITION;
    width: CONTROLS_SIZE;

    &:active {
      transform scale(.8);
    }

    &:focus,
    [no-touch] &:hover {
      background: var(--background-2);
    }
  }

  path {
    fill: none;
    stroke: white;
    stroke-width: 2;
  }

  svg {
    flex: 0 0 rem(32);
    height: auto;
    transition: transform TRANSITION;
  }

  [no-js] & {
    display: none;
  }
}
