moon-photo
  padding 0 0 100%
  position absolute
  width 100%

  &[hemisphere=southern] figure
    transform rotate(180deg)

  & > div
    align-items center
    display flex
    height 100%
    justify-content center
    position absolute
    width 100%

  figure
    border-radius 50%
    flex 0 0 photo-width
    overflow hidden
    padding 0 0 photo-width
    position relative
  
  img
    opacity 0
    position absolute
    transition opacity transition ease

    &[ready]
      opacity 1

    &[frame="1"]
      top 0

  // NOTE: Keep upper range value coordinated with JS.
  for n in (2..26)
    img[frame=\"{n}\"]
      top '-%s00%' % (n - 1)

  .spinner
    left 50%
    position absolute !important
    top 50%
