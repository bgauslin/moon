moon-photo {
  & > div {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: center;
    position: absolute;
    width: 100%;
  }

  figure {
    border-radius: 50%;
    flex: 0 0 PHOTO_WIDTH;
    overflow: hidden;
    padding: 0 0 PHOTO_WIDTH;
    position: relative;
  }

  &[hemisphere='southern'] figure {
    transform: rotate(180deg);
  }

  img {
    opacity: 0;
    position: absolute;
    transition: opacity var(--transition) ease;
  }

  img[ready] {
    opacity: 1;
  }

  img[frame='1'] {
    top: 0;
  }

  .spinner {
    position: absolute !important;
    top: 50%;
  }
}

// NOTE: Keep upper range value coordinated with JS.
for n in (2..26)
  moon-photo img[frame=\'{n}\'] {
    top: '-%s00%' % (n - 1);
  }