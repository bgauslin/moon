$height = 3px;
$width = 20vw;

@keyframes loading {
  0 {
    left: (- $width);
    width: 30%;
  }
  50% {
    width: 30%;
  }
  70% {
    width: 70%;
  }
  80% {
    left: 50%;
  }
  95% {
    left: 120%;
  }
  100% {
    left: 100%;
  }
}

.progress-bar {
  display: none;
  height: $height;
  width: 100vw;
  position: fixed;
  
  body[loading] & {
    display: block;
  }

  &::before {
    animation: loading 2s .3s linear infinite;
    background: white;
    content: '';
    display: block;
    height: $height;
    left: (- $width);
    position: absolute;
    width: $width;
  }

  [no-js] & {
    display: none;
  }
}
