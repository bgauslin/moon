header
  align-self center
  animation slideInDown transition-intro ease
  grid-area header
  padding rem(8) rem(16)

  h1
    font-size 1rem
    margin 0
    text-align center

  a
    link(white, white, rgba(white, .7), rgba(white, .7))
    display inline-block
    padding rem(8)
    transition transform transition
    white-space nowrap

    &:active
      transform scale(.8)

    [no-touch] &
      transition color transition, transform transition
