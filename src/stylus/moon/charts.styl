.charts
  align-self center
  animation scaleIn var(--transition-intro) ease
  grid-area charts
  margin 0 auto
  max-width 90vw
  width 100%

.charts__frame
  margin 0 auto
  max-width CHART_MAX_WIDTH
  padding 0 0 100%
  position relative

// Sun and moon SVG charts.
.chart
  position absolute

.chart--sun
  z-index 1

.chart--moon
  z-index 2

.chart--axes
  z-index 3

// Blend moon arc with sun arc where they overlap.
.chart--moon circle
  opacity .5

// SVG chart axes and ticks.
.axis
  stroke black

.tick
  stroke rgba(white, .7)

// SVG chart 'rise' and 'set' time labels. Sizes scale with SVG, so value varies.
.chart__label
  font-size var(--chart-label)
