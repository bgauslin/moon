.info
  align-self center
  animation slideInUp var(--transition-intro) ease
  font-size var(--info-label)
  grid-area info
  padding px_to_rem(16) 0
  text-align center
  white-space nowrap

.info__phase
  color white

.info__percent
  color rgba(white, .7)
  margin-top px_to_rem(8)

.info__percent[invisible]
  visibility hidden