.footer
  align-self center
  color rgba(white, .5)
  font-size var(--fineprint)
  grid-row 3
  padding 0 0 env(safe-area-inset-bottom)

.footer a
  link(rgba(white, .5), rgba(white, .5), white, white)

[no-touch] .footer a
  transition var(--transition)

.copyright
  align-items center
  display flex
  height var(--footer-height)
  justify-content center
  margin 0
  padding 0 rem(16)
  text-align center

.copyright__years
  margin-right em(8)
