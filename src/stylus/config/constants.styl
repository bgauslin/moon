@import 'functions'

// Values are coordinated with 'Chart' enum in 'src/js/modules/Constants.js'
// @type Hash
Chart = {
  SIZE: 320
  SWEEP_WIDTH: 72
  MARGIN: 44
}

// @type String
AXIS_LABEL_SIZE = rem(32)

// @type String
BUTTON_SIZE = rem(32)

// @type String
CHART_MAX_WIDTH = rem(480)

// @type Number
CHART_SIZE_UNITS = Chart.SIZE + (Chart.MARGIN * 2)

// @type String
CHART_SIZE = rem(CHART_SIZE_UNITS)

// @type String
CONTROLS_SIZE = rem(48)

// @type String
LOCATION_HEIGHT = rem(32)

// @type String
LOCATION_MAX_WIDTH = rem(Chart.SIZE)

// @type Number
PHOTO_SIZE = Chart.SIZE - (Chart.SWEEP_WIDTH * 2)

// @type String
PHOTO_WIDTH = (PHOTO_SIZE / CHART_SIZE_UNITS) * 100%

// @type String
TRANSITION = .3s

// @type String
TRANSITION_INTRO = 1s

// @type Hash
Breakpoint = {
  SMALL: 'screen and (min-width: %s)' % (CHART_SIZE + (AXIS_LABEL_SIZE + CONTROLS_SIZE * 2))
}
