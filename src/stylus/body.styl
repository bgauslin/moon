body {
  background: black;
  color: white;
  display: grid;
  font-family: 'Avenir Variable', sans-serif;
  font-variation-settings: 'wght' 500;
  grid: var(--grid);
  margin: 0;
  min-height: 100vh;
  min-height: -webkit-fill-available;
  padding: 0 0 env(safe-area-inset-bottom);

  // Disable UI while loading data.
  &[loading] * {
    pointer-events: none;
  }

  &[no-js] {
    align-items: center;
  }

  &[no-js] a {
    color: white;
    opacity: .5;

    &:hover,
    &:focus {
      opacity: 1;
    }
  }
}
