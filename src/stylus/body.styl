body
  display grid
  grid var(--grid)
  min-height 100vh
  min-height -webkit-fill-available
  overflow hidden
  padding-bottom env(safe-area-inset-bottom)

// Disable UI while loading data.
body[loading] *
  pointer-events none

body[no-js]
  align-items center

  a
    color white
    opacity .5

    &:hover
    &:focus
      opacity 1
