body
  display grid
  grid-template:
    '. info .' 2fr \
    'charts charts charts' auto \
    'prev date next' 1fr \
    '. location .' 1fr / '%s minmax(auto, %s) %s' % (controls-size chart-max-size controls-size)
  min-height calc(var(--vh, 1vh) * 100)
  overflow hidden
  padding-bottom env(safe-area-inset-bottom)

  @media breakpoint.small
    grid-template:
      '. info .' 2fr \
      'prev charts next' auto \
      '. date .' 1fr \
      '. location .' 1fr / 'minmax(%s, 1fr) minmax(%s, %s) minmax(%s, 1fr)' % (controls-size chart-size chart-max-size controls-size)

// Disable UI while loading data.
body[loading] *
  pointer-events none

body[no-js]
  align-items center
  grid-template 1fr / 1fr !important
  text-align center

  a
    color white
    opacity .5

    &:hover
    &:focus
      opacity 1
