// [1] Formatting hack to render vanilla CSS function instead of calling
// built-in Stylus function.
body
  display grid
  grid var(--grid)
  min-height 'max(var(--vh, 100vh), 100vh)' % null // [1]
  overflow hidden
  padding-bottom env(safe-area-inset-bottom)

// Disable UI while loading data.
body[loading] *
  pointer-events none

body[no-js]
  align-items center

  a
    color white
    opacity .5

    &:hover
    &:focus
      opacity 1
